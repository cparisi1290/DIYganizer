<h1>Sign Up Here</h1>
<div class="text">
<%= form_for(@user, url:'/signup') do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>
    <%= f.label :email %>
    <%= f.email_field :email %><br><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br><br>
    <%= f.submit "Sign Up"%>
<% end %>
</div>